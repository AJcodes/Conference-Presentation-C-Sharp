<UserControl x:Class="Clara.Cores.ThumbnailPDF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Background="White"
             Height="175" Width="205" Margin="5" Loaded="UserControl_Loaded">
    <Grid ClipToBounds="True">
            <Image Name="ThumbnailImage" Stretch="UniformToFill" HorizontalAlignment="Center" MouseLeftButtonUp="ThumbnailImage_MouseLeftButtonUp"/>
    </Grid>
</UserControl>
